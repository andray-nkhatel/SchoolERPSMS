using System.ComponentModel.DataAnnotations;

namespace BluebirdCore.Entities
{
    public class BabyClassSkillAssessment
    {
        public int Id { get; set; }
        public int StudentId { get; set; }
        public int SkillItemId { get; set; }
        public int AcademicYear { get; set; }
        public int Term { get; set; } // 1, 2, 3
        
        [StringLength(1000)]
        public string? TeacherComment { get; set; }
        
        public DateTime AssessedAt { get; set; } = DateTime.UtcNow;
        public int AssessedBy { get; set; } // Teacher who made the assessment
        public int AssessedByTeacherId { get; set; } // Foreign key for AssessedByTeacher navigation property
        public int? BabyClassSkillId { get; set; } // Optional foreign key
        
        // Navigation properties
        public virtual Student Student { get; set; }
        public virtual BabyClassSkillItem SkillItem { get; set; }
        public virtual User AssessedByTeacher { get; set; }
    }
}
